<panel columns="1" gap="10" name="timingSubPanel" weightx="1">
	<panel gap="5" name="fromTimingPanel" weightx="1">
		<label name="fromLabel" text="From" />
		<panel gap="5" name="extendedFromPanel">
			<spinbox columns="4" name="fromMonthsField" text="0"/>
			<label name="fromMonthsLabel" text="months" />
			<spinbox columns="4" name="fromDaysField" text="0"/>
			<label name="fromDaysLabel" text="days" />
		</panel>
		<combobox action="fromDateOptionChanged()" columns="15"
			name="fromDateOptionSelect" editable="false"/>
		<combobox action="fromEventOptionChanged()" columns="25"
			name="fromEventSelect" editable="false"/>
	</panel>
	<panel gap="5" name="toTimingPanel" weightx="1">
		<label name="toLabel" text="To" />
		<panel gap="5" name="extendedToPanel">
			<spinbox columns="4" name="toMonthsField" text="0"/>
			<label name="toMonthsLabel" text="months" />
			<spinbox columns="4" name="toDaysField" text="0"/>
			<label name="toDaysLabel" text="days" />
		</panel>
		<combobox action="toDateOptionChanged()" columns="15"
			name="toDateOptionSelect" editable="false"/>
		<combobox action="toEventOptionChanged()" columns="25"
			name="toEventSelect" editable="false"/>
	</panel>
	<panel gap="5" name="extraTimingOptionPanel" weightx="1">
		<label name="recurringLabel" text="Recurring" />
		<combobox columns="15" name="recurringOptionSelect" editable="false"/>
		<label name="spacer" text="     " />
		<label name="timeOfDayLabel" text="Time of day" />
		<textfield columns="6" name="timeOfDayField" text="10:00"/>
	</panel>
</panel>