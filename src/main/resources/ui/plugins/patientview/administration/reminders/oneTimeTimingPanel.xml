<panel columns="1" gap="10" name="timingSubPanel" weightx="1">
	<panel gap="5" name="fromTimingPanel" weightx="1">
		<panel gap="5" name="extendedFromPanel">
			<spinbox minimum="0" columns="4" name="fromMonthsField" text="0"/>
			<label name="fromMonthsLabel" text="i18n.medic.reminder.months" />
			<spinbox minimum="0" columns="4" name="fromDaysField" text="0"/>
			<label name="fromDaysLabel" text="i18n.medic.reminder.days" />
		</panel>
		<combobox action="fromDateOptionChanged()" columns="15"
			name="fromDateOptionSelect" editable="false"/>
		<combobox action="fromEventOptionChanged()" columns="25"
			name="fromEventSelect" editable="false"/>
	</panel>
	<panel gap="5" name="extraTimingOptionPanel" weightx="1">
		<label name="timeOfDayLabel" text="i18n.medic.reminder.time.of.day" />
		<combobox editable="false" name="timeOfDayField" selected="10">
	        <choice text="1:00 AM"/>
	        <choice text="2:00 AM"/>
	        <choice text="3:00 AM"/>
	        <choice text="4:00 AM"/>
	        <choice text="5:00 AM"/>
	        <choice text="6:00 AM"/>
	        <choice text="7:00 AM"/>
	        <choice text="8:00 AM"/>
	        <choice text="9:00 AM"/>
	        <choice text="10:00 AM"/>
	        <choice text="11:00 AM"/>
	        <choice text="12:00 PM"/>
	       	<choice text="1:00 PM"/>
	        <choice text="2:00 PM"/>
	        <choice text="3:00 PM"/>
	        <choice text="4:00 PM"/>
	        <choice text="5:00 PM"/>
	        <choice text="6:00 PM"/>
	        <choice text="7:00 PM"/>
	        <choice text="8:00 PM"/>
	        <choice text="9:00 PM"/>
	        <choice text="10:00 PM"/>
	        <choice text="11:00 PM"/>
	        <choice text="12:00 AM"/>
    	</combobox>
	</panel>
</panel>