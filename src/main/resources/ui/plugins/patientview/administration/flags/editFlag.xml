<?xml version="1.0" encoding="ISO-8859-1"?>
<panel columns="1" gap="5" name="actionPanel" weightx="4" weighty="1">
    <panel gap="5" name="namePanel">
        <label name="flagNameLabel" text="i18n.medic.common.name.colon"/>
        <textfield columns="30" name="flagNameField"/>
    </panel>
    <separator weightx="1"/>
    <panel gap="5" name="formPanel">
        <label name="formLabel" text="i18n.medic.common.form.colon"/>
        <combobox action="formSelectionChanged()" columns="30" editable="false" name="formSelect"/>
    </panel>
    <panel border="true" bottom="4" columns="1" gap="6" icon="/icons/conditions.png" left="5" name="conditionsPanel" right="5" text="i18n.medic.flags.conditions" top="5" weightx="2" rowspan="2">
        <panel gap="6" left="1" name="anyAllPanel">
            <label name="anyAllPreLabel" text="i18n.medic.flags.if"/>
            <combobox editable="false" name="anyAllSelect" selected="0" text="i18n.medic.flags.any">
                <choice name="anyChoice" text="i18n.medic.flags.any"/>
                <choice name="allChoice" text="i18n.medic.flags.all"/>
            </combobox>
            <label name="anyAllPostLabel" text="i18n.medic.flags.conditions.met"/>
        </panel>
        <list name="conditionList" weightx="2" selection="single"/>
        <panel name="conditionActions">
        <panel gap="5" name="conditionButtonPanel">
            <button action="addCondition()" name="addConditionButton" text="i18n.medic.flags.condition.add" icon="/icons/add.png"/>
            <button action="editCondition()" name="editConditionButton" text="i18n.medic.flags.condition.edit" icon="/icons/pencil.png"/>
            <button action="removeCondition()" name="removeConditionButton" text="i18n.medic.flags.condition.remove" icon="/icons/delete.png"/>
        </panel>
        </panel>
    </panel>
    <panel border="true" bottom="5" columns="1" gap="5" icon="/icons/sms.png" left="5" name="messagePanel" right="5" text="i18n.medic.common.message" top="5" weightx="1">
        <textarea name="messageTextArea" weightx="1"/>
        <panel gap="5" name="variablePanel" weightx="1">
            <label name="variableLabel" text="i18n.medic.common.insert.colon"/>
            <panel gap="5" name="variableButtonPanel" weightx="1">
            	<button action="insertMessageText('{patient name}')" name="insertPatientButton" text="i18n.medic.reminder.variables.patient.name"/>
            	<button action="insertMessageText('{vhw name}')" name="insertVhwButton" text="i18n.medic.reminder.variables.chw.name"/>
            	<label text="i18n.medic.common.field.value.colon"/>
            	<combobox action="messageFieldSelectionChanged()" columns="30" editable="false" name="messageFieldSelect"/>
            </panel>
        </panel>
    </panel>
    <panel gap="5">
        <label text="Contact group to notify:"/>
        <combobox editable="false" name="contactGroupSelect"/>
    </panel>
    <panel gap="10" halign="left" name="bottomButtonPanel" valign="top" weightx="1" weighty="1">
        <button action="saveFlag()" icon="/icons/tick.png" name="saveFlagButton" text="i18n.medic.flags.save"/>
        <button action="editFlagCancelled()" icon="/icons/cross.png" name="cancelEditingFlagButton" text="i18n.detailview.buttons.cancel"/>
    </panel>
    
</panel>
