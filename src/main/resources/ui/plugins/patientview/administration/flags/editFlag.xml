<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- generated by ThinG, the Thinlet GUI editor -->
<panel columns="1" gap="5" name="actionPanel" weightx="4" weighty="1">
    <panel gap="5" name="namePanel">
        <label name="flagNameLabel" text="Name:"/>
        <textfield columns="30" name="flagNameField"/>
    </panel>
    <separator weightx="1"/>
    <panel gap="5" name="formPanel">
        <label name="formLabel" text="Form:"/>
        <combobox action="formSelectionChanged()" columns="30" editable="false" name="formSelect"/>
    </panel>
    <panel border="true" bottom="4" columns="1" gap="6" icon="/icons/conditions.png" left="5" name="conditionsPanel" right="5" text="Conditions" top="5" weightx="1">
        <panel gap="6" left="1" name="anyAllPanel">
            <label name="anyAllPreLabel" text="If"/>
            <combobox action="anyAllChoiceChanged()" editable="false" name="anyAllChoice" selected="0" text=" any">
                <choice name="anyChoice" text=" any"/>
                <choice name="allChoice" text=" all"/>
            </combobox>
            <label name="anyAllPostLabel" text="of these conditions are met:"/>
        </panel>
        <list name="conditionList" weightx="1"/>
        <panel gap="5" name="conditionButtonPanel">
            <button action="addCondition()" name="addConditionButton" text="Add Condition"/>
            <button action="editCondition()" name="editConditionButton" text="Edit Condition"/>
            <button action="removeCondition()" name="removeConditionButton" text="Remove Condition"/>
        </panel>
    </panel>
    <panel border="true" bottom="5" columns="1" gap="5" icon="/icons/sms.png" left="5" name="messagePanel" right="5" text="Message" top="5" weightx="1">
        <textarea name="messageTextArea" weightx="1"/>
        <panel gap="5" name="variablePanel" weightx="1">
            <label name="variableLabel" text="Insert:"/>
            <panel gap="5" name="variableButtonPanel" weightx="1"/>
        </panel>
    </panel>
    <panel gap="10" halign="left" name="bottomButtonPanel" valign="top" weightx="1" weighty="1">
        <button action="saveFlag()" icon="/icons/tick.png" name="saveFlagButton" text="Save Flag"/>
        <button action="editFlagCancelled()" icon="/icons/cross.png" name="cancelEditingFlagButton" text="Cancel"/>
    </panel>
</panel>
