<?xml version="1.0" encoding="ISO-8859-1"?>
<panel border="true" bottom="5" columns="1" gap="5" left="5" name="editDosePanel" right="5" text="Editing OPV" top="5" weightx="1" icon="/icons/pencil.png">
    <panel gap="5" weightx="1">
        <label text="i18n.medic.appointments.appointment.name.colon"/>
        <textfield columns="42" name="doseNameField"/>
    </panel>
    <panel gap="5">
        <label text="i18n.medic.appointment.date.colon" />
        <spinbox minimum="0" columns="4" halign="center" name="startDateMonths" text="0" width="1"/>
        <label text="i18n.medic.appointment.months"/>
        <spinbox minimum="0" columns="4" name="startDateDays" text="0"/>
        <label text="i18n.medic.appointment.days.from.start"/>
    </panel>
    <panel gap="10" halign="left" valign="center" weightx="1">
        <button action="saveDose()" name="saveDoseButton" text="i18n.medic.appointment.save" icon="/icons/tick.png"/>
        <button action="cancelEditingDose()" name="cancelDoseButton" text="i18n.detailview.buttons.cancel" icon="/icons/cross.png"/>
    </panel>
</panel>