<?xml version="1.0" encoding="ISO-8859-1"?>
<panel columns="2" gap="5" name="patientVaccinePanel" weightx="1" weighty="1" top="5" bottom="5" left="5" right="5">
    <panel border="true" bottom="5" columns="1" gap="5" left="5" name="vaccineListPanel" right="5" text="i18n.medic.appointments.patient.appointment.series" top="5" weightx="1" weighty="1" icon="/icons/calendar_small.png">
        <list name="vaccineList" weightx="1" weighty="1" action="vaccineListSelectionChanged()"/>
        <panel columns="1" gap="5" name="vaccineButtonPanel" weightx="1">
            <button action="scheduleVaccineClicked()" name="scheduleVaccineButton" text="i18n.medic.appointments.series.enroll" weightx="1" icon="/icons/calendar_add.png"/>
            <button action="removeVaccineClicked()" name="removeVaccineButton" text="i18n.medic.appointments.series.remove" weightx="1" icon="/icons/calendar_delete.png"/>
        </panel>
    </panel>
    <panel columns="1" gap="5" name="scheduledDosePanel" weightx="4" weighty="1">
        <panel name="scheduledDoseTablePanel" weightx="1" weighty="1"/>
        <panel gap="5" name="doseButtonPanel">
            <button action="rescheduleDoseClicked()" name="rescheduleDoseButton" text="i18n.medic.appointments.reschedule" icon="/icons/calendar_refresh.png"/>
            <button action="administerDoseClicked()" name="adminsterDoseButton" text="i18n.medic.appointments.complete" icon="/icons/calendar_complete.png"/>
            <label weightx="1"/>
            <button action="rescheduleAllDosesClicked()" name="rescheduleAllButton" text="i18n.medic.appointments.reschedule.all" icon="/icons/calendar_refresh_all.png"/>
        </panel>
        <panel  name="appointmentNotesPanel" weightx="1" weighty="1">
          <panel visible="false" top="5" bottom="5" left="5" right="5" columns="1" gap="5" name="innerNotesPanel" weightx="1" weighty="1" border="true">
	          <textarea name="notesTextArea" border="false" editable="false" weightx="1" weighty="1" wrap="true"/>
	          <panel weightx="1" name="editNotesButtonPanel" halign="right" valign="bottom">
	          	<button action="editNotes()" name="editNotesButton" text="Edit" icon="/icons/pencil.png"/>
	          </panel>
	          <panel visible="false" gap="10" weightx="1" name="saveNotesButtonPanel" halign="right" valign="bottom">
	          	<button action="saveNotes()" name="saveNotesButton" text="Save" icon="/icons/tick.png"/>
	          	<button action="cancelEditingNotes()" name="crossNotesButton" text="Cancel" icon="/icons/cross.png"/>
	          </panel>
          </panel>
        </panel>
    </panel>
</panel>